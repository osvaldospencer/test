<%- include('header') %>
            
                               
            
<h2>
    Editar
    <a href="/admin/vagas">vagas</a>
</h2>

<div>
    <form method="POST">
        <label>Titulo:</label>

        <input type="text" name="titulo" value="<%= vagas.titulo %>" >
        <label>Descrição:</label>
        <textarea name="descricao" id="" cols="30" rows="10"><%= vagas.descricao %></textarea>
        <label>Categoria:</label>
        <select name="categoria" id="">
            <% categorias.forEach( categoria => {%>
                <option value="<%= categoria.id %>" <% if(categoria.id == vagas.idcategoria){ %> selected <% } %> > <%= categoria.CATEGORIA %> </option>

           <% }) %>
            
        </select>
        <button>Salvar</button>
    </form>   
</div>



<%- include('footer') %>